{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
      "~/assets/*": ["assets/*"],
      "~/screens/*": ["screens/*"],
      "~/styles/*": ["styles/*"],
      "~/routes/*": ["routes/*"],
      "~/services/*": ["services/*"],
      "~/hoc/*": ["hoc/*"],
      "~/hooks/*": ["hooks/*"],
      "~/redux/*": ["redux/*"],
      "~/constants/*": ["constants/*"],
      "~/app/*": ["app/*"],
      "~/components/*": ["components/*"],
      "~/utils/*": ["utils/*"],
      "~/helper/*": ["helper/*"]
    },
    "moduleResolution": "bundler"
  },
  "include": ["src"]
}
